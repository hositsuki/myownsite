{
  "name": "personal-website",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "kill-ports": "node scripts/killPorts.js",
    "dev:clean": "npm run kill-ports && npm run dev",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "build": "concurrently \"npm run build:client\" \"npm run build:server\"",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "start": "concurrently \"npm run start:client\" \"npm run start:server\"",
    "start:client": "cd client && npm run start",
    "start:server": "cd server && npm run start",
    "lint": "next lint",
    "type-check": "concurrently \"npm run type-check:client\" \"npm run type-check:server\"",
    "type-check:client": "cd client && tsc --noEmit",
    "type-check:server": "cd server && npm run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "lru-cache": "^10.2.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "hardhat": "^2.22.16",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5"
  }
}
